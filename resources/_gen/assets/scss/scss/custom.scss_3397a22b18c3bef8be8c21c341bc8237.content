.cards-list{margin:0 -5px;padding-top:20px;display:flex;flex-direction:column;text-decoration:none}.cards-list:after{content:"";display:table;clear:both}.card-column{float:left;padding:0 10px}.card{box-shadow:0 4px 8px 0 rgba(0,0,0,.2);padding:16px;margin-top:.5rem;height:7em;font-weight:700;text-align:left;cursor:pointer;background-color:#f1f1f1;transition:all .3s ease-out}.card:hover{transform:scale(0.9,0.9);transition:transform .5s ease-in-out}@media all and (max-width:500px){.card-column{width:100%;display:block;margin-bottom:20px}}.notes{background-color:transparent;color:inherit;text-decoration:none;transition:background .15s cubic-bezier(0.33,0.66,0.66,1);border-bottom:3px solid #b4e7f8;box-shadow:inset 0 -3px 0 #b4e7f8;overflow-wrap:break-word;word-break:break-word;word-wrap:break-word}.notes:hover{background-color:#b4e7f8}.main-link{font-weight:bolder;background:linear-gradient(to right,midnightblue,midnightblue 50%,royalblue 50%);background-clip:text;-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-size:200% 100%;background-position:100%;transition:background-position 275ms ease;text-decoration:none}.main-link:hover{background-position:0 100%}